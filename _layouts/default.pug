doctype html
html(lang='en-us' name='bplesb' class='antialiased overflow-y-scroll')
    head
        style
            include ../css/main.css  
            include ../css/styles.css
        script(src="https://kit.fontawesome.com/4c0b598c97.js" crossorigin="anonymous")
        title=site.metaTitle
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible' content='IE=edge')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        meta(name='description', content=site.metaDescription)
        meta(name='author', content=site.author)
        meta(name="theme-color" content="#317EFB")
        link(rel='canonical', href=site.url + page.fileSlug)
        link(rel="manifest" href="/manifest.json")
        link(rel="apple-touch-icon" href="/apple-touch-icon.png")
        link(rel="shortcut icon", href="/favicon.ico")
    body
        a(class="sr-only" href="#main") Skip to content
        div.flex.flex-col.min-h-screen
            block content